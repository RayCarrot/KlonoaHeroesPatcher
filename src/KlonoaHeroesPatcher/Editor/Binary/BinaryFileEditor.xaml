<UserControl x:Class="KlonoaHeroesPatcher.BinaryFileEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KlonoaHeroesPatcher"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
             Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             d:DataContext="{d:DesignInstance local:BinaryFileEditorViewModel}">

    <ScrollViewer Padding="5 0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Raw data -->
            <StackPanel Grid.Row="0"
                        HorizontalAlignment="Left">

                <TextBlock Style="{StaticResource TextBlock.Header}"
                           Text="Raw Data (read-only)"
                           Margin="0 0 0 5" />

                <TextBox Text="{Binding Path=HexString}"
                         IsReadOnly="True"/>

            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>